<% end %>


<h4>Recent Update</h4>
<dl>
  <% @recents.each do |recent| %>
    <dt>
      <%= link_to recent.tune.name, tune_path(recent.tune) %>
    </dt>
    <dd>
      <%= recent.tune.rhythm %>&emsp;
      by&nbsp;<%= link_to recent.user.name, tunes_path(user_name: recent.user.name) %>
      <%= link_to "info", info_user_path(recent.user.id), class: "small" %>
    </dd>
  <% end %>
</dl>