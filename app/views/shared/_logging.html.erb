<ul id="account-menu">
  <li>Logging in <%= current_user.name %></li>
  <li><a href="#" id="user_popup">ユーザーメニュー</a></li>
</ul>

<nav id="user_popup_menu">
  <ul>
    <li><%= link_to "会員情報の確認", user_path(current_user) %></li>
    <li><%= link_to "会員情報の編集", edit_user_path(current_user) %></li>
    <li><%= link_to "パスワードの変更", edit_password_path %>
    <li><%= link_to "ログアウト", session_path, data: { turbo_method: "delete", turbo_confirm: "ログアウトしますか?" } %></li>
  </ul>
</nav>
<script>
var userPopupText = document.getElementById("user_popup");
var userPopupMenu = document.getElementById("user_popup_menu");

var mOpen = function(){
  userPopupMenu.style.display = "block";
}
var mClose = function(){
  userPopupMenu.style.display = "none";
}

userPopupText.addEventListener('click', mOpen);
userPopupMenu.addEventListener('mouseleave', mClose);
</script>